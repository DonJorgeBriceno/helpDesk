<!DOCTYPE html>
<html lang="en">

<head>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#div_incidentes').hide();
      $('#div_requerimientos').hide();
      $('#div_solicitudI').hide();
      $('#div_solicitudR').hide();
      $('#div_verPerfil').hide();
      $('#div_listartodo').hide();

      $("#incidentes").on("click", function () {


        $('#div_incidentes').show();
        $('#div_requerimientos').hide();
        $('#div_solicitudI').hide();
        $('#div_solicitudR').hide();
        $('#div_verPerfil').hide();
        $('#div_listartodo').hide();
        $.get("/verIncidentes/false", function (data, status) {
          $('#div_incidentes').html(data);
        });

      });
      $("#requerimientos").on("click", function () {
        $('#div_requerimientos').show();
        $('#div_incidentes').hide();
        $('#div_solicitudI').hide();
        $('#div_solicitudR').hide();
        $('#div_verPerfil').hide();
        $('#div_listartodo').hide();
      });

      $("#crearIncidente").on("click", function () {


        $('#div_requerimientos').hide();
        $('#div_incidentes').hide();
        $('#div_solicitudI').show();
        $('#div_solicitudR').hide();
        $('#div_verPerfil').hide();
        $('#div_listartodo').hide();


      });

      $("#ListarTodo").on("click", function () {

        $.get("/verIncidentes/true", function (data, status) {
          $('#div_listartodo').html(data);
        });

        $('#div_requerimientos').hide();
        $('#div_incidentes').hide();
        $('#div_solicitudI').hide();
        $('#div_solicitudR').hide();
        $('#div_listartodo').show();
        $('#div_verPerfil').hide();


      });



      $("#verPerfil").on("click", function () {
        $('#div_requerimientos').hide();
        $('#div_incidentes').hide();
        $('#div_solicitudI').hide();
        $('#div_solicitudR').hide();
        $('#div_verPerfil').show();
        $('#div_listartodo').hide();
      });
    });
  </script>
