        <div class="col py-3" name="div_solicitudI" id="div_solicitudI">
          <h3>Solicita un incidente</h3>
              <div class="container">
            <div class="shadow-lg p-3 mb-5 bg-body rounded">
              <h4>Datos del Incidente</h4>
              <form action="/crear" method="POST" name="formulario" id="formulario">
                <div class="col-md-6">
                  <label class="form-label">INCIDENTE: </label>
                  <input id="codigo" name="codigo" type="number" class="form-control form-control-sm" readonly>
                </div>
                <div class="col-md-6">
                  <label for="prioridad" class="form-label">Prioridad</label>
                  <input id="prioridad" name="prioridad" type="number" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label for="asunto" class="form-label">Asunto</label>
                  <input id="asunto" name="asunto" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label for="desc" class="form-label">Descripción</label>
                  <input id="desc" name="desc" type="text" class="form-control" required>
                </div>
                <div class="col-md-6">
                  <label for="res" class="form-label">Responsable</label>
                  <input id="res" name="res" type="text" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="w-100 btn btn-guardar btn-lg"><i class="bi bi-save"> </i>Crear
              Incidente</button>
            </form>
            <script>
              var aleratorio = Math.floor((Math.random() * (10000 - 100 + 1)) + 10000);
              document.formulario.codigo.value = aleratorio
            </script>
